<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pantalla4Activity">

    <TextView
            android:text="TextView"
            android:layout_width="275dp"
            android:layout_height="42dp"
            tools:layout_editor_absoluteX="55dp" android:id="@+id/nombre" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/telefono" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.645"/>
    <TextView
            android:text="TextView"
            android:layout_width="275dp"
            android:layout_height="42dp"
            android:id="@+id/telefono"
            app:layout_constraintEnd_toEndOf="@+id/nombre"
            app:layout_constraintStart_toStartOf="@+id/nombre" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:id="@+id/numeroCasa" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/telefono"
            app:layout_constraintEnd_toEndOf="@+id/telefono" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.387" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/numeroCasa"
            app:layout_constraintEnd_toEndOf="@+id/numeroCasa" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.25" android:layout_marginTop="288dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="304dp"
            android:layout_height="44dp"
            android:id="@+id/textView12" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.765"
            app:layout_constraintEnd_toEndOf="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.482"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" app:layout_constraintHorizontal_bias="0.182"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_guardarLista" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/button6" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.676"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>